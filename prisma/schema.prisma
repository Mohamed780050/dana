generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SalesAnalytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  today     Float    @default(0)
  thisWeek  Float    @default(0)
  thisMonth Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orgId     String   @unique
}

model CardsStatus {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  totalOrders Int      @default(0)
  salesVolume Int      @default(0)
  menuItem    Int      @default(0)
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orgId       String   @unique
}

model totalOrders {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String @unique
  pending    Int    @default(0)
  processing Int    @default(0)
  completed  Int    @default(0)
  orgId      String @unique
}

enum OrderStatus {
  Pending
  Processing
  Completed
  Cancelled
}

enum PaymentStatus {
  Paid
  unPaid
}

enum location {
  inSite
  Delivery
}

model orders {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  userId         String
  customer_name  String
  customer_phone String        @default("")
  total_amount   Float
  status         OrderStatus   @default(Pending)
  payment_status PaymentStatus @default(unPaid)
  created_at     DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  orgId          String        @unique
  tableNumber    Int?
  location       location      @default(inSite)
  address        String?
  note           String?       @default("")
  orderItems     orderItems[]
}

type orderItems {
  name        String
  description String  @default("")
  price       Float
  quantity    Int
}

model menu {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  name   String     
  items  menuItem[] @relation("MenuItems")
  orgId  String     
}

model menuItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  menuId      String   @db.ObjectId
  menu        menu     @relation("MenuItems", fields: [menuId], references: [id], onDelete: Cascade)
  name        String
  price       Float
  description String
  image       String?
  orgId       String   // not unique
}

enum Currency {
  USD
  EUR
  GBP
  EGP
}

model restaurant {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  name        String
  phone       String   @unique
  description String
  address     String
  currency    Currency
  wa_phone    String
  facebook    String?
  instagram   String?
  linkedIn    String?
  orgId       String   @unique
  logo        String?  @default("")
}
