generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SalesAnalytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  today     Float    @default(0)
  thisWeek  Float    @default(0)
  thisMonth Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CardsStatus {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  totalOrders Int      @default(0)
  salesVolume Int      @default(0)
  menuItem    Int      @default(0)
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model totalOrders {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String @unique
  pending    Int    @default(0)
  processing Int    @default(0)
  completed  Int    @default(0)
}

enum OrderStatus {
  Pending
  Processing
  Completed
  Cancelled
}

enum PaymentStatus {
  Paid
  unPaid
}

model orders {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  userId         String
  customer_name  String
  customer_phone String        @default("")
  total_amount   Float
  status         OrderStatus   @default(Pending)
  payment_status PaymentStatus @default(unPaid)
  created_at     DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  items          orderItems[]
}

model orderItems {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String  @default("")
  price       Float
  quantity    Int
  orders      orders? @relation(fields: [ordersId], references: [id])
  ordersId    String? @db.ObjectId
}

model menu {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  name   String     @unique
  items  menuItem[] @relation("MenuItems")
}

model menuItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  menuId      String  @db.ObjectId
  menu        menu    @relation("MenuItems", fields: [menuId], references: [id], onDelete: Cascade) // Relation to menu
  name        String
  price       Float
  description String
  image       String?
}

enum Currency {
  USD
  EUR
  GBP
  EGP
}

model restaurant {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  name        String
  phone       String   @unique
  description String
  address     String
  currency    Currency
  wa_phone    String
  facebook    String?
  instagram   String?
  linkedIn    String?
}
